<% provide(:title, 'All Customer') %>
<h1>All customers</h1>

  <% @customers.each do |customer| %>
  <li>
	<%= link_to customer.name, customer %>
	<% if current_customer.admin? && !current_customer?(customer) %>
    | <%= link_to "delete", customer, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
  </li>
  <% end %>
